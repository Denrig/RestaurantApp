.cart-display
  .informations
    This is your personal cart!
  %table.products-list
    %tr.product-item
      %td.title
        Name
      %td.quantity
        Quantity
      %td.price
        Price
    - @products_carts.each do |product_cart|
      - product =  product_cart.product
      %tr.product-item
        %td.title
          = product.title
        %td.quantity
          = product_cart.quantity
        %td.price
          = (product.price * product_cart.quantity).to_s+ " $"