<%= form_for @product do |form|%>
  <div class="input-field">
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>
  <div class="input-field">
    <%= form.label :category%>
    <%= form.text_field :category%>
  </div>
  <div class="input-field">
    <%= form.label :price%>
    <%= form.number_field :price %>
  </div>
  <div class="input-field">
    <%= form.label :image%>
    <%= form.file_field :image%>
  </div>
  <div class='actions'>
    <%= form.submit%>
  </div>
<%end %>
