= render 'shared/form_errors',entity: @product
= form_for @product do |form|
  .input-with-icon
    %span.glyphicon.glyphicon-font
    = form.text_field :title,class: 'form-control',placeholder: 'Title'
  .input-with-icon
    %span.glyphicon.glyphicon-th-list
    = form.text_field :category,class: 'form-control',placeholder: 'Category'
  .input-with-icon
    %span.glyphicon.glyphicon-euro
    = form.number_field :price,class: 'form-control',placeholder: 'Price'
  .input-with-icon
    %span.glyphicon.glyphicon-picture
    = form.file_field :image, direct_upload: true,class: 'form-control',placeholder: 'Image'
  .actions
    = form.submit 'Add product',class: 'btn btn-primary'
