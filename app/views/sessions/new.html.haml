.login-section.flex-centered
  = form_with url: login_path, scope: :session, local: true, class: ['login-form','flex-centered'] do |f|
    %h1
      Login
    .input-with-icon
      %span.glyphicon.glyphicon-envelope
      = f.email_field :email, class: 'form-control', placeholder:"Email"
    .input-with-icon
      %span.glyphicon.glyphicon-certificate 
      = f.password_field :password, class: 'form-control', placeholder: "Password"
    %p Remember me on this cumputer #{f.check_box :remember_me,class: ['checkbox'] }
    = f.submit "Log in", class: "btn btn-primary"
    .account-section
      %p Forgot password? #{ link_to 'Reset', ''}
      %hr
      %p Not a member yet? #{ link_to 'Sign Up!',new_user_url }