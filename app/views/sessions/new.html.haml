.login-section
  = form_with url: login_path, scope: :session, local: true, class: ['login-form','flex-centered'] do |f|
    %h1
      Login
    = f.email_field :email, class: 'form-control', placeholder:"Email" 
    = f.password_field :password, class: 'form-control', placeholder: "Password"
    %span Remember me on this cumputer #{f.check_box :remember_me }
    %span Forgot password? #{ link_to 'Reset', new_password_reset_path }
    = f.submit "Log in", class: "btn btn-primary" 
  %p
    Not yet a member? Sign up now!
    %br/
    = link_to 'Sign Up!', signup_url, class:['btn btn-primary']
